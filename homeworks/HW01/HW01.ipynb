# %% [markdown]
# # NumPy Basics - Полное руководство

# %%
# 1. Импорт библиотеки
import numpy as np
print("NumPy версии:", np.__version__)

# %%
# 2. Создание массивов
print("=== СОЗДАНИЕ МАССИВОВ ===")

# Из списков
arr1 = np.array([1, 2, 3, 4, 5])
print("Из списка:", arr1)

arr2 = np.array([[1, 2, 3], [4, 5, 6]])
print("2D массив:\n", arr2)

# %%
# Специальные массивы
zeros = np.zeros((2, 3))
ones = np.ones((3, 2))
range_arr = np.arange(0, 10, 2)

print("Нули:\n", zeros)
print("Единицы:\n", ones)
print("Диапазон:", range_arr)

# %%
# 3. Атрибуты
print("=== АТРИБУТЫ ===")
print("Форма:", arr2.shape)
print("Тип данных:", arr2.dtype)
print("Размерность:", arr2.ndim)
print("Всего элементов:", arr2.size)

# %%
# 4. Индексирование и срезы
print("=== ИНДЕКСИРОВАНИЕ ===")
arr = np.array([[10, 20, 30], [40, 50, 60], [70, 80, 90]])
print("Массив:\n", arr)
print("Элемент [1,2]:", arr[1, 2])
print("Первая строка:", arr[0, :])
print("Последний столбец:", arr[:, -1])

# %%
# 5. Векторные операции
print("=== ВЕКТОРНЫЕ ОПЕРАЦИИ ===")
a = np.array([1, 2, 3])
b = np.array([4, 5, 6])

print("a + b =", a + b)
print("a * b =", a * b)
print("a ** 2 =", a ** 2)

# %%
# Статистика
data = np.array([2, 4, 6, 8, 10])
print("Данные:", data)
print("Среднее:", np.mean(data))
print("Стандартное отклонение:", np.std(data))
print("Сумма:", np.sum(data))
print("Максимум:", np.max(data))
